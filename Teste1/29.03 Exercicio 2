#include <stdio.h>

int main(void)
{
    int num1,num2,i,limite;
    printf("Escolha um numero: ");
    scanf("%d",&num1);
    printf("Escolha outro numero: ");
    scanf("%d",&num2);
    if(num1>num2)
    {
         i = num1;
         limite = num2;
    }
    else
    {
         i = num2;
         limite = num1;
    }

    for (i;i>=limite;i--)
    {
         if(i%2 ==0)
         {
              printf("%d\n",i);
         }
    }
    return 0;
}
